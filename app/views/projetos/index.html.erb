<div id="projetos">
<% if @projetos.empty? and !@permitidos %>
	<div class="container contInicial">
		<h1>Projects</h1><br />
		<p id="mensagemInicial">Pronto para começar? É fácil, basta criar um novo projeto ou buscar um projeto existente.</p>
		<div id="boxAddTarefa">
			<%= render 'form_create_project' %>	
		</div>		
		<div id="boxAddUser">
			<%= render 'form_add_projects' %>	
		</div>
		<br />
	</div>
<% else %>
	<div class="conteudoPagina container">
		<h1>Projects</h1><br />
		<% @projetos.each do |projeto| %>
			<div class="containerFolder">
			<%= link_to 'x', projeto, confirm: 'Tem certeza? todas as tarefas serão deletadas, não tem volta!', :class=>"deleteFolder" ,method: :delete %>	
			<br />
			<%= link_to projeto.nome, projeto, :class=>"folder"%>
			</div>
		<% end %>
		
		<% if @permitidos%>
			<% @permitidos.each do |projeto| %>
			<div class="containerFolder">
			<%= link_to projeto.nome, projeto, :class=>"folder"%>
			</div>
			<% end %>
		<%end%><br />
	</div>
	<div class="containerFuncionalidades">
		<div id="boxAddTarefa">
			<%= render 'form_create_project' %>	
		</div>		
		<div id="boxAddUser">
			<%= render 'form_add_projects' %>	
		</div>
		<br />
	</div>
<%end%>
</div>





