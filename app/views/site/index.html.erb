</div>
<div id="registro">
	<div id="colunaEsquerda">
		<img src='/assets/quote_left.gif' id="quoteLeft" /><br />
		<p id="habilitado">A simple kickass taskboard where you just worry about getting things done.</p>
		<p id = "desabilitado" style="display: none;">Perfect for Scrum method and keep up with the tasks evolution.</p>
		<img src='/assets/quote_right.gif' id="quoteRight" /><br/>
	</div>
	<div id="colunaDireita">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  		<%= devise_error_messages! %>
			
			<fieldset>
				<h2> Tryout, it's free!</h2>
				<%= f.email_field :email, :class=>"input", :placeholder=>"Email" %>
				<%= f.password_field :password, :class=>"input", :placeholder=>"Senha" %>
				<%= f.submit "Register", :id=>"botaoRegistro", :class=>"botao" %>
			</fieldset>
		
		<% end %>
		
	</div>
	<br/>
</div>


<script type="text/javascript">
	function iniciaTimer() {
		$("#containerDepoimentos").everyTime(6000, function() {
			trocaDepoimento();
		});
	};
	
	function trocaDepoimento{
		$("#habilitado").fadeOut();
		$("#desabilitado").fadeIn();
	};
	
	$(document).ready(function(){
		iniciaTimer();
	});
</script>